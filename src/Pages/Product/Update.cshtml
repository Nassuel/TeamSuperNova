@page "{id}"
@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Models
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.UpdateModel

@{
    ViewData["Title"] = "Update page";
}

<h1>Update</h1>
<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div>
        <label>Product Brand:</label>
        <input asp-for="Product.Brand" />
    </div>
    <div>
        <label>Upload Product Image:</label>
        <input asp-for="Product.Image" type="file" class="form-control" />
    </div>
    <div>
        <label>Product Description:</label>
        <input asp-for="Product.ProductDescription" />
    </div>
    <div>
        <label>Product Url:</label>
        <input asp-for="Product.Url" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Product/Read" asp-route-id="@Model.Product.Id" class="btn btn-secondary">Cancel</a>
</form>
