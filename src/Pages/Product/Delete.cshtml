@page
@using ContosoCrafts.WebSite.Models
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel
@{
}

<h2>Delete Product</h2>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div>
        <label>Brand:</label>
        <input asp-for="Product.Brand" readonly />
    </div>
    <div>
        <label>Product Name:</label>
        <input asp-for="Product.ProductName" readonly />
    </div>
    <div>
        <label>Description:</label>
        <input asp-for="Product.ProductDescription" readonly />
    </div>
    <div>
        <label>Product Type:</label>
        <input asp-for="Product.ProductType.DisplayName()" readonly />
    </div>

    <p>Are you sure you want to delete this product?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Product/Read" asp-route-id="@Model.Product.Id" class="btn btn-secondary">Cancel</a>
</form>